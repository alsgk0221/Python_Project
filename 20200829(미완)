
a = input()
b=[]
num1 = 0 #a에서 나오는 문자
num2 = 0 #a에서 나오는 문자2
count1 = 0 #num1이 나온 횟수
count2 = 0 #num2가 나온 횟수
i = 0
x = 0
for x in range(x, len(a),1):
  b.append(a[x])
b[i]=num1
count1=+1
i=+1
for i in range(len(a)):
    b[i]=num2
    count2=+1
    if count1<count2:
        count1=count2
        count2=0
    elif count1==count2:
        count1=+1
if count1>=count2:
  print(count1)
else:
  print(count2)
