# 0 1 2
# 3 4 5
# 6 7 8


def make_board():

    a = []
    for i in range(9):
            a.append("-")
    return a

def print_board(board):

    print(board[0]+"ㅣ"+board[1]+"ㅣ"+board[2])
    print("ㅡㅡㅡㅡ")
    print(board[3]+"ㅣ"+board[4]+"ㅣ"+board[5])
    print("ㅡㅡㅡㅡ")
    print(board[6]+"ㅣ"+board[7]+"ㅣ"+board[8])


