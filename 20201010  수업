board = make_board()
print_board(board)

player1 = input("O와 X중 말을 고르시오: ")
player2 = 0
if player1 == 'O':
    player2 = 'X'
else:
    player2 = 'O'
for i in range(5):
    b = int(input("몇번째 칸에 말을 놓으시겠습니까?: "))
    while board[b] == player1 or board[b] == player2:
        print("이미 선택된 칸입니다.다시 선택해주세요.")
        b = int(input("몇번째 칸에 말을 놓으시겠습니까?: "))
    board[b] = player1
    print_board(board)

    import random

    com = random.randrange(0, 8)
    while board[com] == player1 or board[com] == player2:
        com = random.randrange(0, 8)
    board[com] == player2
    print_board(board)
