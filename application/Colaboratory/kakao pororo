from pororo import Pororo # 가능한 작업들 보기 
Pororo.available_models("collocation") # 특정 언어에 대한 특정 작업하는 객체 생성하기 
ner = Pororo(task="ner", lang="en") # ner 진행해보기 
ner("Michael Jeffrey Jordan (born February 17, 1963) is an American businessman and former professional basketball player.")

caption = Pororo(task="caption", lang="ko")
caption("http://imagescdn.gettyimagesbank.com/500/201409/a8515587.jpg")

mt = Pororo(task="translation", lang="multi")
mt("케빈은 아직도 일을 하고 있다.", src="ko", tgt="en")

import smtplib
from email.mime.text import MIMEText

sendEmail = ""
recvEmail = ""
password = ""

smtpName = "smtp.naver.com" #smtp 서버 주소
smtpPort = 587 #smtp 포트 번호

wt = Pororo(task="word_translation", lang="ko", tgt="en")
word=str(input("Write:"))
text = str(wt(word))
msg = MIMEText(str(text)) #MIMEText(text , _charset = "utf8")

msg['Subject'] ="Word Translation"
msg['From'] = sendEmail
msg['To'] = recvEmail
print(msg.as_string())

s=smtplib.SMTP( smtpName , smtpPort ) #메일 서버 연결
s.starttls() #TLS 보안 처리
s.login(sendEmail, password) #로그인
s.sendmail( sendEmail, recvEmail, msg.as_string() ) #메일 전송, 문자열로 변환하여 보냅니다.
s.close() #smtp 서버 연결을 종료합니다.
